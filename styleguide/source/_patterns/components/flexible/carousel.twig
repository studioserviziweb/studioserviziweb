{% spaceless %}

{#
  :: Carousel ::

  PARAMS:
  ---- title:															{<string>}
  ---- subtitle:													{<string>}
  ---- items:            			    				{<object>}
  -------- item:            			    				{<object>}
  ------------ image:            			    		{<object>}
  ---------------- url:												{<string>}
  ---------------- alt:												{<string>}
  ---------------- width:		 									{<string>}
  ---------------- height:	 									{<string>}
  ---------------- sizes:											{<object>}
  -------------------- thumbnail: 	   				{<string>}
  -------------------- thumbnail-width: 			{<string>}
  -------------------- thumbnail-height: 			{<string>}
  -------------------- medium: 								{<string>}
  -------------------- medium-width:					{<string>}
 	-------------------- medium-height: 				{<string>}
  -------------------- medium_large: 					{<string>}
  -------------------- medium_large-width: 		{<string>}
  -------------------- medium_large-height: 	{<string>}
  -------------------- large: 								{<string>}
  -------------------- large-width: 					{<string>}
  -------------------- large-height: 					{<string>}
	------------ description:            			  {<string>}
	------------ link:            			  			{<string>}



  USAGE:
  - include
#}
{# Variables set #}
{% set title = contents.title %}
{% set subtitle = contents.subtitle %}
{% set item = contents.item %}

{# Layout #}
{% endspaceless %}<div class="flex flex-carousel container">
	<div class="flex-head">
		<h2>{{title}}</h2>
		<p>{{subtitle}}</p>
	</div>
<div class="carousel-slider">
{% for el in item %}

	{% include 'components/atoms/loop_item.twig' with { item : el, classes: 'flex-carousel-item' } only %}

{% endfor %}
</div>

</div>
