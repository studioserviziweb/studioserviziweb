{% spaceless %}

{#
  :: Portfolio ::

  PARAMS:
	- portfolio:    		  									{<object>}
  ---- title:															{<string>}
  ---- subtitle:													{<string>}
  ---- items:		            			    		{<object>}
  -------- item:													{<object>}
  ------------ image 											{<string>}

#}

{# Variables set #}
{% set title = contents.title %}
{% set subtitle = contents.subtitle %}
{% set items = contents.item %}

{# Layout #}
{% endspaceless %}<div class="flex flex-portfolio">
	<div class="container">
		<div class="flex-head">
			<h2>{{title}}</h2>
			<p>{{subtitle}}</p>
		</div>

		<div class="portfolio-slider">
			{% for item in items %}

			{# Variable set #}
			{% set image = item.image.url | default('http://localhost/wp-content/uploads/2018/03/image.jpg') %}

			<div class="item-{{loop.index}}">
				<img src="{{image}}" />
			</div>

			{% endfor %}
		</div>
	</div>

</div>
