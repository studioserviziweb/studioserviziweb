	{# Variables set #}
	{% set quote = contents %}
	{% set typeForm = typeForm | default(empty) %}
	{% set image = typeForm | default(empty) %}
	{% set greenImg = greenImg.office %}
	{% set greenNumb = greenNumb.office %}

	{# Layout #}
{% endspaceless %}
<div class="flex flex-quote">
	<div class="flex-quote-container">
		<div class="quote-img-header" data-mob-image-url="{{quote.image_mobile.url}}" data-dk-image-url="{{quote.image.url}}" style="background: no-repeat center;">
			<div class="quote-data">
				<div class="quote-data-bg">
					<div class="content-quote">
						<div class="">
							<h4>La tua serenità è al sicuro</h4>
							<p>Proteggi la tua attività con l'antifurto più avanzato</p>
							<button type="button" name="button" class="btn get_quote">Richiedi un peventivo
								<i class='icon-right-dir'></i>
							</button>
						</div>
					</div>
					<div class="content-call">
						<p>Oppure</p>
						<h4>Chiamaci</h4>
						<a href="tel:{{greenNumb}}"><img src="{{greenImg.url}}"/></a>
						<p>Se preferisci ti chiamiamo noi</p>
						<button type="button" name="button" class="btn contact_phone">Ti richiamiamo noi
							<i class='icon-right-dir'></i>
						</button>
					</div>
					<div class="contact-data">
						<div class="container">

							{% include 'components/molecules/strip_form.twig' with {typeForm: "negozi_e_uffici",api:api, noBack: true, external: "2"} %}

							<form id="quote_call_form" style="display: none" action="" method="">
							<div class="row">
								<div class=" col-md-4">
									<div class="label">Inserisci il tuo numero di telefono</div>
								</div>
								<div class=" col-md-8">
									<input type="hidden" name="datarichiesta" value="{{ "now"|date("m/d/Y") }}">
									<input type="hidden" name="canale" value="">
									<input type="text" name="telcli" value="" required="required" placeholder="Telefono*">
								</div>
							</div>
							<div class="row">
								<div class=" col-md-4">
									<div class="label">Scegli l'ora in cui desideri essere chiamato</div>
								</div>
								<div class="field-data  col-md-8">
									<ul>
										<li>
											<input type="radio" id="appena" name="orachiamata" value="appena">
											<label for="appena">Appena Possibile</label>
											<div class="check"></div>
										</li>
										<li>
											<input type="radio" id="9_12" name="orachiamata" value="9_12">
											<label for="9_12">9.00 - 12.00</label>
											<div class="check"></div>
										</li>
										<li>
											<input type="radio" id="12_14" name="orachiamata" value="12_14">
											<label for="12_14">12.00 - 14.00</label>
											<div class="check"></div>
										</li>
										<li>
											<input type="radio" id="14_18" name="orachiamata" value="14_18">
											<label for="14_18">14.00 - 18.00</label>
											<div class="check"></div>
										</li>
										<li>
											<input type="radio" id="18_21" name="orachiamata" value="18_21">
											<label for="18_21">18.00 - 21.00</label>
											<div class="check"></div>
										</li>
									</div>
								</div>
								<div class="row">
									<div class=" col-md-10">
										<div class="privacy">
											Premendo il pulsante accetti la
											<a href="#">politica di privacy</a>
										</div>
									</div>
									<div class="col-md-2 btn-col">
										<button type="submit" name="button" class="btn">invia</button>
									</div>
								</div>
								<div class="spinner hidden"></div>
								<div class="message hidden"></div>
								</form>

							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
